@model SocialNetwork.Models.Entidades.UserEntity
@{
    ViewBag.Title = "Login";
}




<div class="container login-container ">
    <div class="d-flex flex-column align-items-center align-items-end ">
        <h2>Login</h2>

        @using (Html.BeginForm())
        {


            <div class="form-group">
                @Html.LabelFor(Model => Model.Email, new { @class = "control-label" })
                @Html.TextBoxFor(Model => Model.Email, new { @class = "form-control form-control-lg" })
            </div>

            <div class="form-group">
                @Html.LabelFor(Model => Model.Password, new { @class = "control-label" })
                @Html.PasswordFor(Model => Model.Password, new { @class = "form-control form-control-lg" })
            </div>

            <input type="submit" name="ButtonLogin" value="Login" class="btn btn-lg btn-login " />
        }
    </div>
</div>



